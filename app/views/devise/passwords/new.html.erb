<% content_for :title, "Forget Password" %>
<% content_for :body_id, "page-name" %>

<div class="row-fluid">
  <div class="span12">
    <div class="row-fluid">
      <div class="span12">
        <p>&nbsp;</p>
        <h1 class="text-center text-info">We will help you to remember your user name</h1>
        <p>&nbsp;</p>
      </div>

      <div class="">
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "form-section" }) do |f| %>
          <div class="row-fluid">
            <div class="span2 offset1">
              <p><%= f.label :email, "Email Address", class: "label-special" %></p>
            </div>
            <div class="span7">
              <p><%= f.email_field :email, :autofocus => true, class: "input-block-level" %></p>
            </div>
            <div class="span2">
              <p class="text-error"><label class="label-special"><%= devise_error_messages! %></label></p>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span2 offset1">
            </div>
            <div class="span3">
              <p><%= f.submit "Retrieve User Name", class: "btn btn-block" %></p>
            </div>
          </div>
          <p>&nbsp;</p>
          <div class="row-fluid">
            <div class="span7 offset3">
              <p class="text-warning"><strong>It should be there momentarily. Please check your email</strong></p>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span3">
            </div>
            <div class="span3 text-center">
              <p><%= link_to "Continue to Sign In", new_session_path(resource_name), class: "btn btn-success btn-block" %></p>
            </div>
          </div>
        <% end %>
      </div>
      <p>&nbsp;</p>
    </div>
  </div>
</div>
