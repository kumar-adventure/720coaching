<% content_for :title, "Login Now" %>
<% content_for :body_id, "page-name" %>

<div class="row-fluid">
  <div class="span12">
    <div class="row-fluid">
      <div class="span10">
        <h1>Login Now</h1>
      </div>
    </div>
    <div class="thumbnail">

      <div class="row-fluid">
        <div class="span4"></div>
        <div class="span4 text-center">
          <p>&nbsp;</p>
          <p>
            <%= link_to '<strong class="icon-facebook"></strong> Join Using Facebook'.html_safe, '/auth/facebook/', class: "btn btn-primary btn-large" %>
          </p>
          <p>Now a member? <%= link_to "Register Now", new_user_registration_path %> </p>
        </div>
        <div class="span4"></div>
      </div>

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: "form-section" }) do |f| %>

        <div class="row-fluid">
          <div class="span3 offset1">
            <p><%= f.label :email, "Your Email" %></p>
          </div>
          <div class="span4">
            <p><%= f.email_field :email, :autofocus => true, class: "input-block-level" %></p>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span3 offset1">
            <p><%= f.label :password, "Enter Your password" %></p>
          </div>
          <div class="span4">
            <p><%= f.password_field :password, class: "input-block-level" %></p>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span3 offset1">
          </div>
          <div class="span4">
            <% if devise_mapping.rememberable? -%>
              <p><%= f.check_box :remember_me %> <%= f.label :remember_me, "&nbsp;&nbsp;<strong>Remember me</strong>".html_safe %></p>
            <% end -%>
            <p>
              <label><%= link_to "Forget Your Password", new_password_path(resource_name) %></label>
            </p>
          </div>
        </div>

        <p>&nbsp;</p>
        <div class="row-fluid">
          <div class="span4">
          </div>
          <div class="span4 text-center">
            <p>
              <button type="submit" class="btn btn-success btn-block"><strong class="icon-question"></strong>Sign In</button>
            </p>
          </div>
        </div>
      <% end %>

    </div>
    <p>&nbsp;</p>
  </div>
</div>
