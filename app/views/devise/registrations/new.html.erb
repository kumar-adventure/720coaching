<% content_for :title, "Registration From" %>
<% content_for :body_id, "page-name" %>

<div class="row-fluid">
  <div class="span12">
    <div class="row-fluid">
      <div class="span10">
        <h1>Regirstraion Form</h1>
      </div>
    </div>

    <div class="thumbnail">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: "form-section" }) do |f| %>
        <%= devise_error_messages! %>
        <div class="row-fluid">
          <div class="span4"></div>
          <div class="span4 text-center">
            <p>&nbsp;</p>
            <div class="row-fluid">
              <% User::USER_TYPE.each do |type| %>
                <div class="span6">
                  <p>
                    <%= f.radio_button :user_type, type %>
                    <%= f.label :user_type, type %>
                  </p>
                </div>
              <% end %>
            </div>
          </div>
          <div class="span4"></div>
        </div>

        <div class="row-fluid">
          <div class="span4"></div>
          <div class="span4 text-center">
            <p>
              <%= link_to '<strong class="icon-facebook"></strong> Join Using Facebook'.html_safe, '/auth/facebook/', class: "btn btn-primary btn-large" %>
            </p>
            <p>Already a member, please <%= link_to "Sign In", new_session_path(resource_name) %></p>
          </div>
          <div class="span4"></div>
        </div>

        <div class="row-fluid">
          <div class="span3 offset1">
            <p><%= f.label :email, "Your Email" %></p>
          </div>
          <div class="span4">
            <p><%= f.email_field :email, :autofocus => true, class: "input-block-level" %></p>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span3 offset1">
            <p><%= f.label :user_name, "Choose a user name" %></p>
          </div>
          <div class="span4">
            <p><%= f.text_field :user_name, class: "input-block-level" %></p>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span3 offset1">
            <p><%= f.label :password, "Choose a password" %></p>
          </div>
          <div class="span4">
            <p><%= f.password_field :password, class: "input-block-level" %></p>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span3 offset1">
            <p><%= f.label :password_confirmation, "Confirm password" %></p>
          </div>
          <div class="span4">
            <p><%= f.password_field :password_confirmation, class: "input-block-level" %></p>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span3 offset1">
            <label>Enter Captcha Carefully</label>
          </div>
          <div class="span1">
            <%#= recaptcha_tags %>
            <span><strong class="lead text-white">5+5 =</strong></span>
          </div>
          <div class="span3">
            <input type="text" value="" class="input-block-level">
          </div>
        </div>
        <p>&nbsp;</p>
        <div class="row-fluid">
          <div class="span4"></div>
          <div class="span4 text-right">
            <button type="submit" class="btn btn-success"><strong class="icon-thumbs-up"></strong>Join Us</button>
          </div>
        </div>
      <% end %>
    </div>
    <p>&nbsp;</p>
  </div>
</div>
