<% content_for :title, "Contact Form" %>
<% content_for :body_id, "page-name" %>

<% content_for :header do %>
  <%= link_to '<strong class="icon-undo"></strong>Return'.html_safe, :back, class: "btn btn-danger pull-right" %>
<% end %>

<div class="row-fluid">
  <div class="span12">
    <div class="row-fluid">
      <div class="span10">
        <h1>Contact Information</h1>
      </div>
    </div>

    <div class="thumbnail">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: "form-section" }) do |f| %>
        <div class="row-fluid">
          <div class="span4"></div>
          <div class="span4 text-center">
            <p>&nbsp;</p>
          </div>
          <div class="span4"></div>
        </div>

        <div class="row-fluid">
          <div class="span2 offset2">
            <p><%= f.label :name, "Name" %></p>
          </div>
          <div class="span4">
            <p><%= f.text_field :name, :autofocus => true, class: "input-block-level" %></p>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span2 offset2">
            <p><%= f.label :email, "Email Address" %></p>
          </div>
          <div class="span4">
            <p><%= f.email_field :email, class: "input-block-level" %></p>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span2 offset2">
            <p><%= f.label :location, "Location" %></p>
          </div>
          <div class="span4">
            <p><%= f.email_field :location, class: "input-block-level" %></p>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span2 offset2">
            <p><%= f.label :address, "Address" %></p>
          </div>
          <div class="span4">
            <p><%= f.email_field :address, class: "input-block-level" %></p>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span2 offset2">
            <p><%= f.label :phone, "Phone Number" %></p>
          </div>
          <div class="span4">
            <p><%= f.email_field :phone, class: "input-block-level" %></p>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span2 offset2">
            <p><%= f.label :password, "Change Password" %> <i>(leave blank if you don't want to change it)</i></p>
          </div>
          <div class="span4">
            <p><%= f.password_field :password, :autocomplete => "off", class: "input-block-level" %></p>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span2 offset2">
            <p><label>Payment Method</label></p>
          </div>
          <div class="span4">
            <p><input type="text" value="" class="input-block-level"></p>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span4"></div>
          <div class="span4"></div>
          <div class="span3 text-right">
            <button type="submit" class="btn btn-success"><strong class="icon-checkmark"></strong>Submit</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
